{
  "deprecated": true,
  "note": "Moved to repo root: vercel.json. Keep Vercel config at repository root for correct monorepo builds."
}

{
  "version": 2,
  "builds": [
    {
      "src": "apps/storefront/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/storefront/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN": "@shopify-store-domain",
    "NEXT_PUBLIC_SHOPIFY_STOREFRONT_API_TOKEN": "@shopify-storefront-token",
    "NEXT_PUBLIC_STRAPI_URL": "@strapi-url",
    "NEXT_PUBLIC_SITE_URL": "@site-url"
  },
  "functions": {
    "apps/storefront/src/app/api/**/*.js": {
      "maxDuration": 10
    }
  }
}

